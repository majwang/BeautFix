    <option id="Fragrance">Fragrance</option>
    <option id="SkinCare">Skin Care</option>
    <option id="Shaving">Shaving</option>
    <option id="Hair">Hair</option>
    <option id="Other">Other</option>
</select>
</div>



<script>
    url = "https://bwichs.pythonanywhere.com/BeautFix/default/writeAreview/makeup/shaving";
    $(document).ready(function(){
        hideAll();
    });

    function hideAll(x){
        $("#makeupCategory").hide();
        $("#skinCareCategory").hide();
        $("#bathbodyCategory").hide();
        $("#hairCategory").hide();
        $("#toolsbrushesCategory").hide();
        $("#menCategory").hide();
        switch(x) {
            case 0:
                $("#makeupCategory").show();
                break;
            case 1:
                $("#skinCareCategory").show();
                break;
            case 2:
                $("#bathbodyCategory").show();
                break;
            case 3:
                $("#hairCategory").show();
                break;
            case 4:
                $("#toolsbrushesCategory").show();
                break;
            case 5:
                $("#menCategory").show();
                break;
            default:
                break;
        }
    }

    $("#makeupCategory").change(
        function() {
            if ($(this).find("option:selected").attr("id") == "faceMakeup")
                url = "https://bwichs.pythonanywhere.com/BeautFix/default/writeAreview/makeup/faceMakeup";
            else if ($(this).find("option:selected").attr("id") == "bodyMakeup")
                url = "https://bwichs.pythonanywhere.com/BeautFix/default/writeAreview/makeup/bodyMakeup";
            else if ($(this).find("option:selected").attr("id") == "eyeMakeup")    
                url = "https://bwichs.pythonanywhere.com/BeautFix/default/writeAreview/makeup/eyeMakeup";
            else if ($(this).find("option:selected").attr("id") == "lips")    
                url = "https://bwichs.pythonanywhere.com/BeautFix/default/writeAreview/makeup/lips";
            else if ($(this).find("option:selected").attr("id") == "nails")    
                url = "https://bwichs.pythonanywhere.com/BeautFix/default/writeAreview/makeup/nails";
    });
    
    $("#skinCareCategory").change(
        function() {
            if ($(this).find("option:selected").attr("id") == "wash")
                url = "https://bwichs.pythonanywhere.com/BeautFix/default/writeAreview/skinCare/wash";
            else if ($(this).find("option:selected").attr("id") == "moisturizers")
                url = "https://bwichs.pythonanywhere.com/BeautFix/default/writeAreview/skinCare/moisturizers";
            else if ($(this).find("option:selected").attr("id") == "treatments")    
                url = "https://bwichs.pythonanywhere.com/BeautFix/default/writeAreview/skinCare/treatments";
            else if ($(this).find("option:selected").attr("id") == "sunscreens")    
                url = "https://bwichs.pythonanywhere.com/BeautFix/default/writeAreview/skinCare/sunscreens";
            else if ($(this).find("option:selected").attr("id") == "tanners")    
                url = "https://bwichs.pythonanywhere.com/BeautFix/default/writeAreview/skinCare/tanners";
            else if ($(this).find("option:selected").attr("id") == "whiteners")    
                url = "https://bwichs.pythonanywhere.com/BeautFix/default/writeAreview/skinCare/whiteners";
            else if ($(this).find("option:selected").attr("id") == "other")    
                url = "https://bwichs.pythonanywhere.com/BeautFix/default/writeAreview/skinCare/other";
    });
    
    $("#bathBodyCategory").change(
        function() {
            if ($(this).find("option:selected").attr("id") == "lotionCreams")
                url = "https://bwichs.pythonanywhere.com/BeautFix/default/writeAreview/bathBody/lotionCreams";
            else if ($(this).find("option:selected").attr("id") == "bathShower")
                url = "https://bwichs.pythonanywhere.com/BeautFix/default/writeAreview/bathBody/bathShower";
            else if ($(this).find("option:selected").attr("id") == "sun")    
                url = "https://bwichs.pythonanywhere.com/BeautFix/default/writeAreview/bathBody/sun";
            else if ($(this).find("option:selected").attr("id") == "other")    
                url = "https://bwichs.pythonanywhere.com/BeautFix/default/writeAreview/bathBody/other";
    });
    
    $("#hairCategory").change(
        function() {
            if ($(this).find("option:selected").attr("id") == "stylingTools")
                url = "https://bwichs.pythonanywhere.com/BeautFix/default/writeAreview/hair/stylingTools";
            else if ($(this).find("option:selected").attr("id") == "treatment")
                url = "https://bwichs.pythonanywhere.com/BeautFix/default/writeAreview/hair/treatment";
            else if ($(this).find("option:selected").attr("id") == "shampooConditioner")    
                url = "https://bwichs.pythonanywhere.com/BeautFix/default/writeAreview/hair/shampooConditioner";
            else if ($(this).find("option:selected").attr("id") == "other")    
                url = "https://bwichs.pythonanywhere.com/BeautFix/default/writeAreview/hair/other";
    });
    
    $("#toolsBrushesCategory").change(
        function() {
            if ($(this).find("option:selected").attr("id") == "hairStyleTools")
                url = "https://bwichs.pythonanywhere.com/BeautFix/default/writeAreview/toolsBrushes/HairStyleTools";
            else if ($(this).find("option:selected").attr("id") == "makeupBrushesApplicators")
                url = "https://bwichs.pythonanywhere.com/BeautFix/default/writeAreview/toolsBrushes/MakeupBrushesApplicators";
            else if ($(this).find("option:selected").attr("id") == "other")    
                url = "https://bwichs.pythonanywhere.com/BeautFix/default/writeAreview/toolsBrushes/Other";
    });
    
    $("#menCategory").change(
        function() {
            if ($(this).find("option:selected").attr("id") == "fragrance")
                url = "https://bwichs.pythonanywhere.com/BeautFix/default/writeAreview/men/fragrance";
            else if ($(this).find("option:selected").attr("id") == "skinCare")
                url = "https://bwichs.pythonanywhere.com/BeautFix/default/writeAreview/men/skinCare";
            else if ($(this).find("option:selected").attr("id") == "shaving")    
