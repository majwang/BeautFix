            else if ($(this).find("option:selected").attr("id") == "hair")    
                url = "https://bwichs.pythonanywhere.com/BeautFix/default/writeAreview/men/hair";
            else if ($(this).find("option:selected").attr("id") == "other")    
                url = "https://bwichs.pythonanywhere.com/BeautFix/default/writeAreview/men/other";
    });
    
    $("#category").change(
        function() {
            if ($(this).find("option:selected").attr("id") == "makeup") {
                $("#makeupCategory").show();
                hideAll(0);
            } else if ($(this).find("option:selected").attr("id") == "skinCare") {
                $("#skinCareCategory").show();
                hideAll(1);
            } else if ($(this).find("option:selected").attr("id") == "bathbody") {
                $("#bathbodyCategory").show();
                hideAll(2);
            } else if ($(this).find("option:selected").attr("id") == "hair") {
                $("#hairCategory").show();
                hideAll(3);
            } else if ($(this).find("option:selected").attr("id") == "toolsbrushes") {
                $("#toolsbrushesCategory").show();
                hideAll(4);
            } else if ($(this).find("option:selected").attr("id") == "men") {
                $("#menCategory").show();
                hideAll(5);
            }
            else{
                hideAll();
            }
        });
</script>
